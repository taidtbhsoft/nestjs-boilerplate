{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
        "ES2021.String"
    ],
    "emitDecoratorMetadata": true ,
    "skipLibCheck":true,
    "paths": {
        "@/*": ["./src/*"],
        "@common/*": ["./src/common/*"],
        "@modules/*": ["./src/modules/*"],
        "@config/*": ["./src/config/*"],
        "@constants/*": ["./src/common/constants/*"],
        "@constants": ["./src/common/constants"],
      }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
